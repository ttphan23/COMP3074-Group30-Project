<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_deep_space">

    <View
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/bg_gradient_arc_top" />

    <View
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_gradient_arc_bottom" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="24dp"
        android:paddingTop="110dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvSettingsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:letterSpacing="0.1" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:strokeColor="@color/neon_purple"
                app:strokeWidth="2dp"
                app:cardBackgroundColor="@color/colorSurfaceCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_person"
                        android:tint="@color/neon_purple"
                        android:background="@drawable/bg_neon_input"
                        android:padding="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Adrian Alvaro"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@adrianplays"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Preferences"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    app:strokeColor="@color/neon_purple"
                    app:strokeWidth="2dp"
                    app:cardBackgroundColor="@color/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Dark Mode"
                            android:textColor="?attr/colorOnSurface" />

                        <Switch
                            android:id="@+id/switchDarkMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:trackTint="@color/neon_cyan"
                            android:thumbTint="@color/neon_purple" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    app:strokeColor="@color/neon_cyan"
                    app:strokeWidth="2dp"
                    app:cardBackgroundColor="@color/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Push Notifications"
                            android:textColor="?attr/colorOnSurface" />

                        <Switch
                            android:id="@+id/switchPush"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:trackTint="@color/neon_purple"
                            android:thumbTint="@color/neon_cyan" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />

                <Button
                    android:id="@+id/btnChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Change Password"
                    android:background="@drawable/bg_neon_input"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnPrivacy"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:text="Privacy Settings"
                    android:background="@drawable/bg_neon_card"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:text="Logout"
                    android:background="@drawable/bg_neon_button"
                    android:textColor="@color/colorOnPrimary" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
