<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium">

        <!-- Profile Header -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="@color/card_background">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_medium">

                <!-- Profile Image -->
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/profile_image_size"
                    android:layout_height="@dimen/profile_image_size"
                    android:background="@drawable/profile_background"
                    android:padding="16dp"
                    android:src="@drawable/ic_person"
                    android:contentDescription="Profile Picture"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Username -->
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="@string/username_placeholder"
                    android:textSize="@dimen/text_size_heading"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    app:layout_constraintBottom_toBottomOf="@id/imageView"
                    app:layout_constraintEnd_toStartOf="@+id/btnLogout"
                    app:layout_constraintStart_toEndOf="@id/imageView"
                    app:layout_constraintTop_toTopOf="@id/imageView" />

                <!-- Logout Button -->
                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/button_danger"
                    app:layout_constraintBottom_toBottomOf="@id/imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/imageView" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Game Status Buttons -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Played"
                android:textSize="@dimen/text_size_body"
                android:backgroundTint="@color/primary" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="Playing"
                android:textSize="@dimen/text_size_body"
                android:backgroundTint="@color/primary" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Backlog"
                android:textSize="@dimen/text_size_small"
                android:backgroundTint="@color/primary" />
        </LinearLayout>

        <!-- Trending Games Section -->
        <TextView
            android:id="@+id/tvTrendingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥ Trending Games"
            android:textSize="@dimen/text_size_heading"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="@dimen/margin_small"
            android:drawablePadding="@dimen/padding_small" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:id="@+id/llTrendingGames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">
                <!-- Trending games will be dynamically added here -->
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- My Game Library -->
        <TextView
            android:id="@+id/tvLibraryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“š My Game Library"
            android:textSize="@dimen/text_size_heading"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="@dimen/margin_small" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_medium"
                    android:text="ðŸŽ® The Legend of Zelda: BOTW"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:background="?attr/selectableItemBackground" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_medium"
                    android:text="ðŸŽ® Elden Ring"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:background="?attr/selectableItemBackground" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_medium"
                    android:text="ðŸŽ® Hollow Knight"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:background="?attr/selectableItemBackground" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
