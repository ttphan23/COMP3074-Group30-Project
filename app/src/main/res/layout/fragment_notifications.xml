<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_space"
    android:clipToPadding="false"
    tools:context=".ui.notifications.NotificationsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="40dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tvReviewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write a Review"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvReviewSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share your gaming experience"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- Review Form Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Game Selection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Game"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinnerGames"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/bg_neon_input"
                    android:padding="12dp"
                    android:layout_marginBottom="20dp" />

                <!-- Rating -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Rating"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <RatingBar
                    android:id="@+id/ratingbBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="0"
                    android:isIndicator="false"
                    android:progressTint="@color/rating_star"
                    android:progressBackgroundTint="@color/text_tertiary"
                    android:layout_marginBottom="20dp" />

                <!-- Review Text -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Review"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etReview"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="top|start"
                    android:hint="What did you think about this game?"
                    android:background="@drawable/bg_neon_input"
                    android:padding="16dp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:layout_marginBottom="20dp" />

                <!-- Submit Button -->
                <Button
                    android:id="@+id/btnSubmitReview"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Submit Review"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:background="@drawable/bg_neon_button"
                    android:textAllCaps="false" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- My Reviews Section -->
        <TextView
            android:id="@+id/tvMyReviewsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Reviews"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvLastReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No reviews yet"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnClearReviews"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="Clear All Reviews"
                    android:textColor="@color/error"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_button_outline" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
