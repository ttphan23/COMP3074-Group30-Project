<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_deep_space"
    tools:context=".ui.notifications.NotificationsFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="top"
        android:background="@drawable/bg_gradient_arc_top" />

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_gradient_arc_bottom" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvReviewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âœï¸ Share a Quick Review"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/tvReviewSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Let the neon league feel your voice"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="26dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="26dp"
                android:padding="20dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="@color/card_background"
                app:strokeColor="@color/neon_purple"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select a game"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/spinnerGames"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_neon_input"
                        android:padding="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your Rating"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="18dp" />

                    <RatingBar
                        android:id="@+id/ratingbBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:rating="0"
                        android:isIndicator="false"
                        android:progressTint="@color/neon_pink"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Write your thoughts"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="18dp" />

                    <EditText
                        android:id="@+id/etReview"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginTop="6dp"
                        android:gravity="top|start"
                        android:hint="Drop a neon review..."
                        android:background="@drawable/bg_neon_input"
                        android:padding="14dp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:inputType="textMultiLine"
                        android:maxLines="5" />

                    <Button
                        android:id="@+id/btnSubmitReview"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginTop="20dp"
                        android:text="SUBMIT REVIEW"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:background="@drawable/bg_neon_button"
                        android:textAllCaps="false" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvMyReviewsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ My Recent Reviews"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="10dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="@color/card_background"
                app:strokeColor="@color/neon_cyan"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLastReview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No previous reviews yet."
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="18dp" />

                    <Button
                        android:id="@+id/btnClearReviews"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="CLEAR ALL REVIEWS"
                        android:textColor="@color/text_primary"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/transparent_black"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
